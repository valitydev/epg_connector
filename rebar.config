{erl_opts, [debug_info]}.
{deps, [
    jsx,
    {canal, {git, "https://github.com/valitydev/canal", {tag, "v1.0.1"}}},
    {epgsql, {git, "https://github.com/epgsql/epgsql.git", {tag, "4.8.0"}}}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [epg_connector]}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        error_handling,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

{project_plugins, [
    {rebar3_lint, "3.2.6"},
    {erlfmt, "1.5.0"}
]}.

{profiles, [
    {test, [
        {deps, [
            {meck, "0.9.2"}
        ]},
        {dialyzer, [
            {plt_extra_apps, [canal, jsx, common_test, runtime_tools, meck]}
        ]}
    ]}
]}.

{erlfmt, [
    {print_width, 120},
    {files, ["{src}/*.{erl,app.src}", "rebar.config", "config/sys.config", "elvis.config"]}
]}.

{ct_opts, [
    {ct_hooks, [epg_ct_hook]}
]}.
